<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookViewerActivity"
    android:background="@color/colorBackground">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_bookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BookName"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"/>

    <TextView
        android:id="@+id/textView_bookAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BookAuthor"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView_bookName"
        app:layout_constraintStart_toStartOf="@+id/textView_bookName"
        app:layout_constraintTop_toBottomOf="@+id/textView_bookName"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/textView_Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView_bookAuthor"
        app:layout_constraintStart_toStartOf="@+id/textView_bookAuthor"
        app:layout_constraintTop_toBottomOf="@+id/textView_bookAuthor"
        app:layout_constraintVertical_bias="0.1"/>

    <TextView
        android:id="@+id/textView_bookSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Summary"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView_Location"
        app:layout_constraintStart_toStartOf="@+id/textView_Location"
        app:layout_constraintTop_toBottomOf="@+id/textView_Location"
        app:layout_constraintVertical_bias="0.1"/>

    <ImageView
        android:id="@+id/imageViewSpecial"
        app:layout_constraintEnd_toEndOf="@+id/textView_bookSummary"
        app:layout_constraintStart_toStartOf="@+id/textView_bookSummary"
        app:layout_constraintTop_toBottomOf="@+id/textView_bookSummary"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickOpenPdf"
        android:layout_marginTop="15dp"
        android:text="Read Book"
        app:layout_constraintEnd_toEndOf="@+id/imageViewSpecial"
        app:layout_constraintStart_toStartOf="@+id/imageViewSpecial"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSpecial"
        />

</androidx.constraintlayout.widget.ConstraintLayout>